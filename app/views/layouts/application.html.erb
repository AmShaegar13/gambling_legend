<!DOCTYPE html>
<html>
<head>
  <title>Gambling Legend</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Gambling Legend</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <% if current_user.guest? %>
          <%= form_tag sign_in_path, method: :post, class: %w(navbar-form navbar-right) do %>
            <div class="form-group">
              <%= label_tag :name_or_email, 'Name or Email', class: %w(control-label sr-only) %>
              <%= text_field_tag :name_or_email, flash[:failed_login], class: 'form-control', placeholder: 'Name or Email' %>
            </div>
            <div class="<%= password_class %>">
              <%= label_tag :password, 'Password', class: %w(control-label sr-only) %>
              <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password', 'aria-describedby' => 'inputError2Status' %>
              <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
              <span id="inputError2Status" class="sr-only">(error)</span>
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
          <% end %>
        <% else %>
          <div class="navbar-form navbar-right">
            <%= link_to current_user do %>
              <button class="btn btn-link"><%= current_user.name %></button>
            <% end %>
            <%= link_to sign_out_path do %>
              <button class="btn btn-danger">Sign Out</button>
            <% end %>
          </div>
        <% end %>
      </div><!--/.navbar-collapse -->
    </div>
  </nav>
  
  <%= yield %>

  <div class="container">
    <hr>

    <footer>
      <p>&copy; Company 2014</p>
    </footer>
  </div>
    
</body>
</html>
