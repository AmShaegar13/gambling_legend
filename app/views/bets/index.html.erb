<div class="jumbotron">
  <div class="container">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="progress">
        <div id="time-left" class="progress-bar progress-bar-striped active"
            role="progressbar" aria-valuenow="10:00" aria-valuemin="10:00" aria-valuemax="00:00"
            data-seconds-left="<%= @seconds %>">
        </div>
      </div>
    </div>
    <div id="alert" class="col-sm-6 col-sm-offset-3 col-xs-12"></div>
  </div>
</div>
<div class="container">
  <div class="row" style="height: 250px">
    <% @bet_types.each do |type| %>
      <div class="col-md-4 col-sm-6 col-xs-12 bet">
        <h2><%= type.label %></h2>
        <% bet = @bets[type.label] %>
        <% disable = bet.amount != 0 %>
        <%= form_for bet, remote: true, namespace: type.label, method: disable ? 'delete' : 'post', html: { autocomplete: 'off' } do |f| %>
          <%= f.fields_for type do |ft| %>
            <%= ft.hidden_field :label  %>
          <% end %>
          <% type.choices.each do |choice| %>
            <div class="radio">
              <%= label_tag do %>
                <%= f.radio_button :choice, choice.label %>
                <%= choice.label %>
              <% end %>
            </div>
          <% end %>
          <div class="input-group">
            <span class="input-group-addon preview-amount"></span>
            <%= f.range_field(
              :amount,
              class: 'form-control bet-amount',
              in: 0..@user.balance,
              step: 10,
              disabled: disable
            ) %>
            <span class="input-group-btn">
              <button type="submit" class="btn btn-<%= disable ? 'danger' : 'success' %>">Bet</button>
            </span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>